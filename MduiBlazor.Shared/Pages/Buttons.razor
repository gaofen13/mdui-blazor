@page "/buttons"

<h2>Button</h2>
<MduiButton Color="@Colors.Theme.Primary">Button</MduiButton>

<h2>IconButton</h2>
<MduiIconButton Color="@Colors.Theme.Accent" IconName="add" />

<h2>ButtonGroup</h2>
<MduiButtonGroup>
    <MduiButton>
        <MduiIcon Name="format_align_left" />
    </MduiButton>
    <MduiButton>
        <MduiIcon Name="format_align_center" />
    </MduiButton>
    <MduiButton>
        <MduiIcon Name="format_align_right" />
    </MduiButton>
    <MduiButton>
        <MduiIcon Name="format_align_justify" />
    </MduiButton>
</MduiButtonGroup>

<h2>FabButton</h2>
<MduiFabButton IconName="add" Color="@Colors.Theme.Accent" />

<MduiFabMenu IconName="add" OpenedIconName="edit" Color="@Colors.Theme.Accent">
    <MduiFabButton IconName="backup" Color="@Colors.Theme.Primary" Mini />
    <MduiFabButton IconName="bookmark" Color="@Colors.Theme.Accent" Mini />
    <MduiFabButton IconName="access_alarms" Color="@Colors.Blue.Primary" Mini />
    <MduiFabButton IconName="touch_app" Color="@Colors.Green.Primary" Mini />
</MduiFabMenu>