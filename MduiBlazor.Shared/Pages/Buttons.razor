@page "/buttons"

<h2>Button</h2>
<MduiButton Color="@Colors.Theme.Primary">Button</MduiButton>

<h2>IconButton</h2>
<MduiIconButton Color="@Colors.Theme.Accent" Icon="add" />

<h2>ButtonGroup</h2>
<MduiButtonGroup>
    <MduiButton>
        <MduiIcon Name="format_align_left" />
    </MduiButton>
    <MduiButton>
        <MduiIcon Name="format_align_center" />
    </MduiButton>
    <MduiButton>
        <MduiIcon Name="format_align_right" />
    </MduiButton>
    <MduiButton>
        <MduiIcon Name="format_align_justify" />
    </MduiButton>
</MduiButtonGroup>

<h2>FabButton</h2>
<MduiFab Icon="add" Color="@Colors.Theme.Accent" />

<MduiFabMenu Icon="add" OpenedIcon="edit" Color="@Colors.Theme.Accent">
    <MduiFab Icon="backup" Color="@Colors.Theme.Primary" Mini />
    <MduiFab Icon="bookmark" Color="@Colors.Theme.Accent" Mini />
    <MduiFab Icon="access_alarms" Color="@Colors.Blue.Primary" Mini />
    <MduiFab Icon="touch_app" Color="@Colors.Green.Primary" Mini />
</MduiFabMenu>