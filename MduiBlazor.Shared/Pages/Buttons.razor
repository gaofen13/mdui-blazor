@page "/buttons"

<h2>Button</h2>
<MduiButton Color="@Color.Primary">Button</MduiButton>

<h2>IconButton</h2>
<MduiIconButton Color="@Color.Accent" IconName="add" />

<h2>ButtonGroup</h2>
<MduiButtonGroup>
    <MduiButton>
        <MduiIcon Name="format_align_left" />
    </MduiButton>
    <MduiButton>
        <MduiIcon Name="format_align_center" />
    </MduiButton>
    <MduiButton>
        <MduiIcon Name="format_align_right" />
    </MduiButton>
    <MduiButton>
        <MduiIcon Name="format_align_justify" />
    </MduiButton>
</MduiButtonGroup>

<h2>FabButton</h2>
<MduiFabButton IconName="add" Color="@Color.Accent" />

<MduiFabMenu IconName="add" OpenedIconName="edit" Color="@Color.Accent">
    <MduiFabButton IconName="backup" Color="@Color.Primary" Mini />
    <MduiFabButton IconName="bookmark" Color="@Color.Accent" Mini />
    <MduiFabButton IconName="access_alarms" Color="@Color.Info" Mini />
    <MduiFabButton IconName="touch_app" Color="@Color.Success" Mini />
</MduiFabMenu>