<MduiCheckbox Switch @bind-Value="@searchable" Label="开启搜索" />
<MduiCheckbox Switch @bind-Value="@read_only" Label="只读" />
<MduiCheckbox Switch @bind-Value="@disabled" Label="禁用" />

<MduiPicker ContentStyle="display:flex;flex-wrap:wrap;" Searchable="@searchable" Readonly="@read_only"
    Disabled="@disabled" Items="@icons" ValueFunc="i=>i" DisplayStringFunc="i=>i" MaxHeight="200px">
    <OptionContent>
        <MduiIcon Icon="@context" />
    </OptionContent>
</MduiPicker>

@code {
    bool searchable;
    bool read_only;
    bool disabled;
    IEnumerable<string> icons = ["add", "add_alarm", "add_box", "add_location", "add_shopping_cart"];
}