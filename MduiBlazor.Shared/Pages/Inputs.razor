@page "/inputs"
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations;

<EditForm Model="@info" OnSubmit="@ValidSubmit">
    <DataAnnotationsValidator />
    <MduiExpandableTextField Placeholder="请输入文本" @bind-Value="@info.Text" />
    <MduiTextField Placeholder="请输入文本" @bind-Value="@info.Text" />
    <MduiTextField ErrorText="错误测试" Label="文本框" @bind-Value="@info.Text" />
    <MduiTextField Label="文本框" FloatingLabel @bind-Value="@info.Text" />
    <MduiTextField Label="文本框" FloatingLabel Placeholder="请输入文本" @bind-Value="@info.Text" />
    <MduiNumbericField Label="数字框" Placeholder="请输入或选择数字" @bind-Value="@info.Number1" />
    <MduiTextField Label="文本框" HelperText="请输入文本" MaxLength="20" Placeholder="请输入文本" @bind-Value="@info.Text" />
    <MduiTextField Label="文本框" HelperText="请输入文本" Rows="5" FloatingLabel MaxLength="50" @bind-Value="@info.Text" />
    <MduiDivider Class="mdui-m-y-4" />
    <MduiField Label="单项选择">
        <MduiSelect @bind-Value="@info.Select1">
            <option>1</option>
            <option>2</option>
            <option>3</option>
        </MduiSelect>
    </MduiField>
    <MduiField Label="多项选择">
        <MduiMultiSelect @bind-Value="@info.Select2">
            <option>1</option>
            <option>2</option>
            <option>3</option>
        </MduiMultiSelect>
    </MduiField>
    <MduiButton ButtonType="@ButtonType.Submit">Submit</MduiButton>
    </EditForm>

    <EditForm Model="@info">
    <MduiField Label="Radio">
        <MduiRadioGroup @bind-Value="@info.select3">
            <MduiRadio Value="1">S1</MduiRadio>
            <MduiRadio Value="2">S2</MduiRadio>
            <MduiRadio Value="3">S3</MduiRadio>
        </MduiRadioGroup>
    </MduiField>
    <MduiField Label="Checkbox">
        <MduiCheckbox Label="勾选" @bind-Value="@info.checkboxValue" />
    </MduiField>
    <MduiField Label="Switch">
        <MduiSwitch @bind-Value="@info.checkboxValue" />
    </MduiField>
    <MduiField Label="滑块">
        <MduiSlider @bind-Value="@info.Number1" Min="0" Max="100" />
        <MduiSlider @bind-Value="@info.Number2" Discrete Step="0.1" Min="0" Max="100" />
        </MduiField>
        <MduiButton ButtonType="@ButtonType.Submit">Submit</MduiButton>
        </EditForm>

        @code {
    private InputInfo info = new InputInfo();
    private void ValidSubmit(EditContext content)
    {
        content.Validate();
    }
    class InputInfo
    {
        [Required]
        public SubInfo? Radio { get; set; } = new SubInfo { Name = "S1", Value = 1 };
        [Range(1, 100)]
        public int Number1 { get; set; }
        public double Number2 { get; set; }

        [Required(ErrorMessage = "Text是必须的")]
        public string? Text { get; set; }

        [Required]
        public string Select1 { get; set; } = "";
        public string[]? Select2 { get; set; } = new string[] { "s1", "s2" };
        public int select3 = 2;

        public bool checkboxValue = true;
    }

    class SubInfo
    {
        public int Value { get; set; }
        public string? Name { get; set; }
    }
}