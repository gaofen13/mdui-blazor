@namespace MduiBlazor
@typeparam TValue
@inherits MduiComponentBase

<div class="@Classname" style="@Style" @attributes="@AdditionalAttributes">
    <MduiInputText Name="@Name" Value="@DisplayValue" Readonly="@_readonly" Disabled="@Disabled"
        Placeholder="@Placeholder" DisplayName="@DisplayName" AutoFocus="@AutoFocus" Required="@Required"
        OnInput="@OnInput" OnFocus="@OnPickerFocus" />
    <ul class="@ContentClassname" style="@ContentStylelist">
        <CascadingValue Value="@this" IsFixed>
            @ChildContent
        </CascadingValue>
    </ul>
</div>

<MduiOverlay Transparent Visible="@_isOpen" OnBackgroundClick="@OnClickBackground" />
