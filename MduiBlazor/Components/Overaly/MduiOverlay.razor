@namespace MduiBlazor
@inherits MduiComponentBase

@if (Visible)
{
    <div class="mdui-overlay mdui-overlay-show" @onclick="@OnBackgroundClick">
        @ChildContent
    </div>
}

@code {
    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnBackgroundClick { get; set; }
}