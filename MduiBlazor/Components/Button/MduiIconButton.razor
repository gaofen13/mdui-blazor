@namespace MduiBlazor
@inherits MduiButtonBase

<MduiButton Class="@Classname"
            Style="@Style"
            @attributes="@AdditionalAttributes"
            ButtonType="@ButtonType"
            Color="@Color"
            Dense="@Dense"
            Disabled="@Disabled"
            Href="@Href"
            Target="@Target"
            HtmlTag="@HtmlTag"
            DisableRipple="@DisableRipple"
            Text="@true"
            OnClick="@OnClick"
            Command="@Command"
            CommandParameter="@CommandParameter">
    @if(ChildContent is not null)
    {
        <i  class="@IconClassname">
            @ChildContent
        </i>
    }
    else if (!string.IsNullOrWhiteSpace(Icon))
    {
        <MduiIcon Name="@Icon" Color="@IconColor" />
    }
</MduiButton>