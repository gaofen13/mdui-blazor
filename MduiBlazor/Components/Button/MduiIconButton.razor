@namespace MduiBlazor
@inherits MduiButtonBase

<MduiButton Class="@Classname"
            Style="@Style"
            @attributes="@AdditionalAttributes"
            ButtonType="@ButtonType"
            Color="@Color"
            Dense="@Dense"
            Disabled="@Disabled"
            Href="@Href"
            Target="@Target"
            HtmlTag="@HtmlTag"
            Ripple="@Ripple"
            Text="@true"
            OnClick="@OnClick"
            Command="@Command"
            CommandParameter="@CommandParameter">
    <MduiIcon Name="@Icon" Color="@IconColor" />
</MduiButton>