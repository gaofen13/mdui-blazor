@namespace MduiBlazor
@inherits MduiComponentBase

<MduiOverlay Visible="@ShowDialog" OnBackgroundClick="@OnClickBackground">
    <div class="@Classname" style="@Style" @attributes="@AdditionalAttributes" @onclick:stopPropagation="@true">
        @if (!string.IsNullOrWhiteSpace(Title))
        {
            <div class="mdui-dialog-title">@Title</div>
        }
        <div class="mdui-dialog-content">
            @if (ChildContent is not null)
            {
                @ChildContent
            }
            else
            {
                @Message
            }
        </div>
        @if (ActionsContent is not null || _options.ShowCancelButton || _options.ShowConfirmButton)
        {
            <div class="mdui-dialog-actions">
                @if (ActionsContent is not null)
                {
                    @ActionsContent
                }
                else
                {
                    if (_options.ShowCancelButton)
                    {
                        <MduiButton Text OnClick="@Cancel">@_options.CancelText</MduiButton>
                    }
                    if (_options.ShowConfirmButton)
                    {
                        <MduiButton Text OnClick="@Confirm">@_options.ConfirmText</MduiButton>
                    }
                }
            </div>
        }
    </div>
</MduiOverlay>