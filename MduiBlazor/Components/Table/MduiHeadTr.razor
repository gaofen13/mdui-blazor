@namespace MduiBlazor
@inherits MduiComponentBase
@typeparam TItem

<tr class="@Class" style="@Style" @attributes="@AdditionalAttributes">
    @if (Table?.MultiSelection == true)
    {
        <th class="mdui-table-cell-checkbox">
            <MduiCheckbox Value="@Checked" ValueChanged="@OnCheckedChanged" />
        </th>
    }
    @ChildContent
</tr>