@namespace MduiBlazor
@inherits MduiInputBase<TValue>
@typeparam TValue

<select @ref="@Element" multiple="multiple" size="@Height" class="@Classname" style="@Style" name="@Name"
    required="@Required" disabled="@Disabled" @attributes="@AdditionalAttributes"
    value="@BindConverter.FormatValue(CurrentValue)?.ToString()"
@onchange="@(EventCallback.Factory.CreateBinder<string[]?>(this,SetCurrentValueAsStringArray,default))">
    @ChildContent
</select>
