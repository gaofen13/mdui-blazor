@namespace MduiBlazor
@inherits MduiComponentBase
@typeparam TValue

<label class="@Classname" style="@Style" @attributes="@AdditionalAttributes">
    <input type="radio" name="@(Name??RadioGroup?.RadioName)" readonly="@Readonly" disabled="@Disabled"
        checked="@Checked" value="@Value" @onchange="@OnRadioChanged" @onfocus="@OnFocus" @onblur="@OnBlur" />
    <i class="mdui-radio-icon"></i>
    @if (ChildContent is not null)
    {
        @ChildContent
    }
    else if (Label is not null)
    {
        @Label
    }
</label>