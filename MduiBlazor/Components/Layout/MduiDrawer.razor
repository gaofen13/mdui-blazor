@namespace MduiBlazor
@inherits MduiComponentBase

<div class="@Classname" style="@Style" @attributes="@AdditionalAttributes">
    <CascadingValue Value="@this" Name="Drawer" IsFixed>
        @ChildContent
    </CascadingValue>
</div>
@if (!Persistent)
{
    <MduiOverlay Visible="@Opened" OnBackgroundClick="@OnOverlayClickedAsync" />
}