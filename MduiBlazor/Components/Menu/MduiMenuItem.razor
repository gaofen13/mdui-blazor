@namespace MduiBlazor
@inherits MduiComponentBase

<li class="@Classname" style="@Style" disabled="@Disabled" @onclick="@OnClick" @attributes="@AdditionalAttributes">
    <a href="@Href" target="@Target">
        @ChildContent
        @if (!string.IsNullOrWhiteSpace(HelperText))
        {
            <span class="mdui-menu-item-helper">@HelperText</span>
        }
    </a>
</li>